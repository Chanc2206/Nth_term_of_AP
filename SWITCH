#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the value of n: ";
    cin >> n;

    int result;
    switch(n) {
        case 0:
            result = 3 * 0 + 7;
            break;
        case 1:
            result = 3 * 1 + 7;
            break;
        case 2:
            result = 3 * 2 + 7;
            break;
        default:
            result = 3 * n + 7;
            break;
    }
    
    cout << "The " << n << "th term of the AP is: " << result << endl;
    return 0;
}
